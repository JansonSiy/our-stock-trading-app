<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Georama:wght@200&family=Montserrat:wght@100;400;600&display=swap" rel="stylesheet">
<div class="bgSignUp">
<h2 class="createAccount">Welcome Back!</h2>
</br>
<p class="intro">To keep track on your trading app</br>
  log in with your personal info
</p>
<div id="formSignUp">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"signUpNew", placeholder:"Enter Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class:"signUpNew", placeholder:"Enter Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"rememberMebox" %>
      <%= f.label :remember_me, class:"remenberMe" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"signUpNewBtn" %>
  </div>
</br>
</br>
<%= link_to 'Sign Up', new_user_registration_path, class:"link", id:"link2" %>
</br>
</br>
<%= link_to 'Forgot Password?', new_user_password_path, class:"link" %>
<% end %>
</div>
</div>