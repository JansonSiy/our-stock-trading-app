<%= render "layouts/messages" %>

<%= render "layouts/header" %>

</br>

<% if current_user.role_type == "Buyer" %>
  <h2>This is BUYERS's display</h2>
<% elsif current_user.role_type == "Broker" %>
  <h2>This is BROKERS's display</h2>
<% else %>
  <%= link_to 'New Account', new_account_path %>
  <h2>User List</h2>
  <% @users.each do |user| %>
      <ul>
        <li><%= user.id %></li>
        <li><%= user.name %></li>
        <li><%= user.email %></li>
        <li><%= user.role_type %></li>
        <li><%= user.credit %></li>
      </ul>
  <% end %>
<% end %>